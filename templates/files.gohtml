<!doctype html>
<html lang="en">
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Files</title>
<link rel="stylesheet" href="../../style.css">
</head>
<body>
{{ range .Changes }}
{{- if eq .ChangeType "R" }}
<a class="file renamed" onclick="load('{{ $.Tag1 }}', '{{ $.Tag2 }}', '{{ .Name }}', '{{ .OldName }}')" data-file="{{ .OldName }} → {{ .Name }}" title="{{ .OldName }} → {{ .Name }}">{{ .OldName }} → {{ .Name }}</a>
{{- else if eq .ChangeType "D" }}
<a class="file deleted" onclick="load('{{ $.Tag1 }}', '{{ $.Tag2 }}', '{{ .Name }}')" data-file="{{ .Name }}" title="{{ .Name }}">{{ .Name }}</a>
{{- else if eq .ChangeType "A" }}
<a class="file new" onclick="load('{{ $.Tag1 }}', '{{ $.Tag2 }}', '{{ .Name }}')" data-file="{{ .Name }}" title="{{ .Name }}">{{ .Name }}</a>
{{- else }}
<a class="file modified" onclick="load('{{ $.Tag1 }}', '{{ $.Tag2 }}', '{{ .Name }}')" data-file="{{ .Name }}" title="{{ .Name }}">{{ .Name }}</a>
{{- end }}
{{ end }}
<script>
function load(tag1, tag2, file, oldFile) {
    window.parent.document.dispatchEvent(new CustomEvent('loadDiff', {
        detail: {
            tag1: tag1,
            tag2: tag2,
            file: file,
            oldFile: oldFile
        }
    }));
    // prevent default link behavior
    return false;
}
</script>
</body>
</html>
